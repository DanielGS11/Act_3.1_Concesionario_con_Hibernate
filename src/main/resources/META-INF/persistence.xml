<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Nombre de la Unidad de Persistencia (usado en el Main.java) -->
    <persistence-unit name="concesionarioHibernate">

        <!-- Clase proveedora de la implementación (Hibernate) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Modelos que usara -->
        <class>modelos.Coche</class>
        <class>modelos.Concesionario</class>
        <class>modelos.Equipamiento</class>
        <class>modelos.Mecanico</class>
        <class>modelos.Propietario</class>
        <class>modelos.Reparacion</class>
        <class>modelos.Venta</class>

        <properties>
            <!-- 1. CONFIGURACIÓN JDBC (CONEXIÓN) -->
            <!-- Cambia 'mibd_ra3' por el nombre de tu base de datos creada en MySQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/concesionario_hibernate?serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <!-- Pon aquí tu contraseña de MySQL, si no tienes, déjalo vacío -->
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Crea las tablas si no estan o las deja si ya existen -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- 2. CONFIGURACIÓN DE HIBERNATE -->
            <!-- Muestra las consultas SQL en la consola (Muy útil para aprender) -->
            <property name="hibernate.show_sql" value="false"/>
            <!-- Formatea el SQL para que sea legible -->
            <property name="hibernate.format_sql" value="true"/>
            <!-- Resalta la sintaxis del SQL en consola -->
            <property name="hibernate.highlight_sql" value="true"/>

            <!-- Dialecto: Ayuda a Hibernate a optimizar SQL para MySQL 8 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>

    </persistence-unit>
</persistence>